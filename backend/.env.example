# Time to Travel Backend - Environment Variables
# Скопируйте этот файл в .env и заполните реальными значениями

# ===================================
# PostgreSQL Database Configuration
# ===================================
DATABASE_URL=postgres://timetotravel_user:STRONG_PASSWORD_HERE@postgres:5432/timetotravel
POSTGRES_USER=timetotravel_user
POSTGRES_PASSWORD=STRONG_PASSWORD_HERE
POSTGRES_DB=timetotravel

# ===================================
# Redis Configuration
# ===================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=REDIS_PASSWORD_HERE

# ===================================
# JWT Configuration
# ===================================
# Сгенерируйте секрет командой: openssl rand -base64 32
JWT_SECRET=YOUR_GENERATED_SECRET_HERE
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# ===================================
# Server Configuration
# ===================================
PORT=8080
NODE_ENV=production
DOMAIN=titotr.ru
API_VERSION=1.0.0

# ===================================
# SSL/TLS Configuration (для Certbot)
# ===================================
SSL_EMAIL=admin@titotr.ru
CERTBOT_DOMAIN=titotr.ru,www.titotr.ru

# ===================================
# Yandex Maps API (для маршрутов)
# ===================================
YANDEX_MAPS_API_KEY=YOUR_YANDEX_API_KEY

# ===================================
# Payment Gateway (опционально)
# ===================================
# PAYMENT_GATEWAY_URL=https://payment.example.com
# PAYMENT_API_KEY=your_payment_api_key

# ===================================
# Email Service (для верификации, опционально)
# ===================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=noreply@titotr.ru
# SMTP_PASSWORD=your_smtp_password

# ===================================
# Logs Configuration
# ===================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===================================
# Security
# ===================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
CORS_ORIGIN=https://titotr.ru,https://www.titotr.ru

# ===================================
# Backup Configuration
# ===================================
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=titotr-backups
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# ===================================
# Monitoring (опционально)
# ===================================
# SENTRY_DSN=https://your-sentry-dsn
# PROMETHEUS_PORT=9090
